

@baseUrl = http://localhost:4004


### test with one condition
POST {{baseUrl}}/rule/Rules
Content-Type: application/json

{
  "name": "Test Rule 1",
  "description": "Check BP name equals John",
  "targetEntity": "API_BUSINESS_PARTNER.A_BusinessPartner",
  "conditions": [
    {
      "fieldName": "BusinessPartnerFullName",
      "operator": "=",
      "value": "John Doe",
      "binaryAnd": true
    }
  ]
}

### test with more than one condition
POST {{baseUrl}}/rule/Rules
Content-Type: application/json

{
  "name": "Test Rule 2",
  "description": "Check BP name and country",
  "targetEntity": "API_BUSINESS_PARTNER.A_BusinessPartner",
  "conditions": [
    {
      "fieldName": "BusinessPartnerFullName",
      "operator": "contains",
      "value": "Corp",
      "binaryAnd": true
    },
    {
      "fieldName": "NameCountry",
      "operator": "=",
      "value": "US",
      "binaryAnd": true
    }
  ]
}

